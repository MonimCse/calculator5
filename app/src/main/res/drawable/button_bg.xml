<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed" />
            <stroke android:width="@dimen/stroke" android:color="@color/colorAccent" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/button_redius" android:topLeftRadius="@dimen/button_redius" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/semi_transparent" />
            <stroke android:width="@dimen/stroke" android:color="@color/unselected_stroke" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/button_redius" android:topLeftRadius="@dimen/button_redius" android:topRightRadius="0dp" />
        </shape>
    </item>

</selector>